# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/Pattinambakkam_Fish_World

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com, Port: 587
# For SendGrid: smtp.sendgrid.net, Port: 587
# For Outlook: smtp-mail.outlook.com, Port: 587
# For Development/Testing: smtp.ethereal.email, Port: 587 (https://ethereal.email/)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Email From Configuration
FROM_NAME=Pattinambakkam_Fish_World
FROM_EMAIL=noreply@Pattinambakkam_Fish_World.com
